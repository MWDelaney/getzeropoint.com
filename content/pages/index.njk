      # Navigation settings (menu items and structure)
      - label: "Navigation"
        name: "nav"
        file: "src/data/navigation.json"
        fields:
          - label: "Items"
            name: "items"
            widget: "list"
            fields:
              - label: "Text"
                name: "text"
                widget: "string"
              - label: "URL"
                name: "url"
                widget: "string"
              - label: "External"
                name: "external"
